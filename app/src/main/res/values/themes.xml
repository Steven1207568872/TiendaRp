<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Deber_ListView" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.Deber_ListView" parent="Base.Theme.Deber_ListView">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Custom Action Bar style -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/red</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Custom Action Bar title text style -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/my_action_bar_title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>